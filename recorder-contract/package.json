{
  "name": "@eddalabs/counter-contract",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "compile": "compact compile src/counter.compact src/managed/counter",
    "compile:voting": "compact compile src/voting.compact src/managed/voting",
    "compile:recorder": "compact compile src/recorder.compact src/managed/recorder",
    "build": "tsc && node -e \"const fs=require('fs'),p=require('path');['counter','voting','recorder'].forEach(c=>{const s=p.join('src','managed',c,'contract','index.d.ts'),d=p.join('dist','managed',c,'contract','index.d.ts');if(fs.existsSync(s)){fs.copyFileSync(s,d)}})\"",
    "deploy": "node dist/deploy.js",
    "deploy:voting": "node dist/deploy-voting.js",
    "deploy:recorder": "node dist/deploy-recorder.js"
  },
  "dependencies": {
    "@midnight-ntwrk/compact-js": "2.4.0",
    "@midnight-ntwrk/compact-runtime": "0.14.0",
    "@midnight-ntwrk/ledger-v7": "7.0.0",
    "@midnight-ntwrk/midnight-js-contracts": "3.0.0",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "3.0.0",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "3.0.0",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "3.0.0",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "3.0.0",
    "@midnight-ntwrk/midnight-js-network-id": "3.0.0",
    "@midnight-ntwrk/midnight-js-types": "3.0.0",
    "@midnight-ntwrk/midnight-js-utils": "3.0.0",
    "@midnight-ntwrk/wallet-sdk-unshielded-wallet": "1.0.0",
    "@midnight-ntwrk/wallet-sdk-shielded": "1.0.0",
    "@midnight-ntwrk/wallet-sdk-dust-wallet": "1.0.0",
    "@midnight-ntwrk/wallet-sdk-facade": "1.0.0",
    "@midnight-ntwrk/wallet-sdk-hd": "3.0.0",
    "@midnight-ntwrk/wallet-sdk-address-format": "3.0.0",
    "@scure/bip39": "^2.0.1",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "rxjs": "^7.8.1",
    "ws": "8.18.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/ws": "^8.18.1",
    "typescript": "^5.8.3"
  }
}
